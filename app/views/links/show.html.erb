<%- model_class = Link -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:full_url) %>:</strong></dt>
  <dd><%= @link.full_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:short_url) %>:</strong></dt>
  <dd><%= @link.short_url %></dd>
  <dt><strong><%= model_class.human_attribute_name(:access_count) %>:</strong></dt>
  <dd><%= @link.access_count %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              links_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_link_path(@link), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              link_path(@link),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
