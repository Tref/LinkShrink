<%= form_for @link, :html => { :class => "link-form" } do |f| %>

    <% if @link.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@link.errors.count, "error") %> prohibited this link from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @link.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :full_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_url, :class => 'form-control' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :short_url, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :short_url, :class => 'form-control', disabled: true %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :access_count, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :access_count, :class => 'form-control', type: 'number' %>
    </div>
  </div>

  <div class="actionss">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), links_path, :class => 'btn btn-default' %>
  </div>

<% end %>
